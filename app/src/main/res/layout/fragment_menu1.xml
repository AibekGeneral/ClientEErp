<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/basu"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/menu"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#FFFFFF"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:textSize="@dimen/_17ssp"
            android:background="@drawable/rounded_bg_red"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_16sdp"
                android:id="@+id/korzina"
                android:layout_width="@dimen/_43sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@color/transparent"
                android:src="@mipmap/korzinamenu" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/korinbei"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/image_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/meal"
            />
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нажмите на иконку ниже сканирования "
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/_20ssp"/>
<!--        <TextView-->
<!--            android:gravity="center"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Сделайте ваш заказ и вы сделайте\nнас счастливым"-->
<!--            android:textColor="@color/gray"/>-->
        <ImageView
            android:id="@+id/image_qr"
            android:background="@drawable/rounded_qr"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@mipmap/qr"
            />


    </LinearLayout>

    <GridView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/two_grid"></GridView>

</LinearLayout>