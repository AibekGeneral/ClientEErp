<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/basu"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/profil"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#FFFFFF"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textStyle="bold"
            android:textSize="@dimen/_17ssp"
            android:background="@drawable/rounded_bg_red"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_16sdp"
                android:id="@+id/exit"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@color/transparent"
                android:src="@mipmap/exitcon" />
        </RelativeLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/uppro"
        app:civ_border_color="#D2D5DA"
        app:civ_border_width="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Отарбай Даурен"
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/redaktir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Редактировать данные"
        android:background="@drawable/textlines"
        android:textColor="#000000"
        android:textSize="17sp"/>


    <TextView
        android:id="@+id/text_ati"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:drawableLeft="@mipmap/profile1"
        android:text="dauren_otarbay"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:textColor="#000000"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="@dimen/_4sdp"
        android:textSize="@dimen/_17ssp"
        android:background="@drawable/rounded_profile"/>
    <TextView
        android:id="@+id/text_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:drawableLeft="@mipmap/profile2"
        android:gravity="center"
        android:text="+7 702 681 9850"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:textColor="#000000"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="@dimen/_4sdp"
        android:textSize="@dimen/_17ssp"
        android:background="@drawable/rounded_profile"/>
    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:drawableLeft="@mipmap/profile3"
        android:gravity="center"
        android:text="dauren_otarbay@gmail.com"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:textColor="#000000"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="@dimen/_4sdp"
        android:textSize="@dimen/_17ssp"
        android:background="@drawable/rounded_profile"/>


    <Button
        android:id="@+id/btn_smn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="Сменить пароль"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_16ssp"
        android:background="@drawable/rounded_bg"/>


</LinearLayout>