<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/colorTransparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg_red_below">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minus"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/button_cart_round_background_gradient"
                android:text="3"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:textSize="24sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Даурен"
                    android:textColor="#E41042"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:id="@+id/usl_text1"
                    android:textSize="26sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Число посетителей: 4"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>





        <ListView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:divider="@null"
            android:dividerHeight="1dp"
            android:id="@+id/list_frag3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:gravity="center">
            <TextView
                android:id="@+id/cancelpod"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Отклонить"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="17sp"
                android:background="@drawable/rounded_edcod"/>

            <TextView
                android:id="@+id/dob"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="25dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Принять"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:background="@drawable/rounded_edcod_red"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>