<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:padding="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        android:id="@+id/cardView_menu">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_77sdp"
                android:id="@+id/my_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/rounded_ed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_name"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:text="Ресторан &quot;Вкусно как дома&quot;"
                    android:layout_marginTop="1dp"
                    />
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Итого: 22 000 тенге"
                    android:textSize="@dimen/_13ssp"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 марта 2019"
                    android:textSize="@dimen/_13ssp"
                    android:textAllCaps="false"
                    android:textColor="#000000"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_alignParentLeft="true"
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:id="@+id/my_podrob"
                        android:textSize="@dimen/_12ssp"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:text="Подробное"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/rounded_bg"
                        />


                </RelativeLayout>

            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>